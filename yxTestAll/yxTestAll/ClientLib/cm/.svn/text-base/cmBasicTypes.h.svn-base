#include <stdint.h>

//a four-byte boolean datatype
typedef int CM_BOOL;
#define CM_FALSE (0)
#define CM_TRUE (!(CM_FALSE))


//debug marcro
#define CM_DEBUG DEBUG


typedef char           CM_BIT;

typedef char           CM_CHAR;
typedef unsigned char  CM_UCHAR;


typedef int16_t         CM_INT16;
