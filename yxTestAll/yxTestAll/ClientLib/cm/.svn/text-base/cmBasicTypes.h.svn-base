typedef int32_t         CM_INT32;
typedef uint32_t        CM_UINT32;


typedef int64_t         CM_INT64;
typedef int64_t         CM_UINT64;



typedef void* CM_PTR;
typedef unsigned long CM_OFFSET;



#endif
